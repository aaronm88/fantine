# =============================================================================
# FANTINE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# DIGITALOCEAN CREDENTIALS
# =============================================================================

# DigitalOcean API Token (REQUIRED)
# Get this from: https://cloud.digitalocean.com/account/api/tokens
# Create a Personal Access Token with Read and Write permissions
DIGITALOCEAN_TOKEN=your_digitalocean_api_token_here

# =============================================================================
# DIGITALOCEAN SPACES (for Terraform state storage)
# =============================================================================

# DigitalOcean Spaces Access Key (REQUIRED)
# Get this from: https://cloud.digitalocean.com/account/api/tokens
# Create a Spaces Keys with Read and Write permissions
DO_SPACES_ACCESS_KEY=your_spaces_access_key_here

# DigitalOcean Spaces Secret Key (REQUIRED)
DO_SPACES_SECRET_KEY=your_spaces_secret_key_here

# DigitalOcean Spaces Bucket Name (REQUIRED)
# Create a bucket in DigitalOcean Spaces for storing Terraform state
DO_SPACES_BUCKET=your-terraform-state-bucket

# DigitalOcean Spaces Endpoint (REQUIRED)
# Format: https://region.digitaloceanspaces.com
# Common regions: nyc3, sfo3, fra1, sgp1, ams3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# =============================================================================
# SSH CONFIGURATION
# =============================================================================

# SSH Key Name in DigitalOcean (REQUIRED)
# This should match the name of an SSH key you've uploaded to DigitalOcean
# Upload your SSH key at: https://cloud.digitalocean.com/account/security
DO_SSH_KEY_NAME=your-ssh-key-name

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================

# GitHub Personal Access Token (REQUIRED)
# Get this from: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:org (if using organization)
GH_TOKEN=your_github_personal_access_token_here

# GitHub Repository URL (REQUIRED)
# Format: https://github.com/username/repository-name
REPO_URL=https://github.com/your-username/fantine

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Email address for monitoring alerts (REQUIRED)
ALERT_EMAIL=your-email@example.com

# =============================================================================
# SCRAPING CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Target URLs to scrape (comma-separated)
SCRAPING_TARGET_URLS=https://example.com,https://another-site.com

# Output format for scraped data
SCRAPING_OUTPUT_FORMAT=json

# Maximum number of pages to scrape
SCRAPING_MAX_PAGES=100

# Delay between requests in seconds
SCRAPING_DELAY_SECONDS=1.0

# Request timeout in seconds
SCRAPING_TIMEOUT_SECONDS=30

# Maximum concurrent requests
SCRAPING_MAX_CONCURRENT=5

# =============================================================================
# TERRAFORM CONFIGURATION (Optional)
# =============================================================================

# Terraform workspace (optional)
TF_WORKSPACE=default

# =============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# =============================================================================

# Development mode (set to true for local development)
DEV_MODE=false

# Debug logging level
LOG_LEVEL=INFO
